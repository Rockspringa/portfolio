---
import LangPicker from "@components/LangPicker.astro";
import type { Translator } from "@i18n/utils";

interface Props {
  lang: string;
  t: Translator;
}

const { lang, t } = Astro.props;
const baseUrl = `/${lang}`;
---

<header class="fixed navbar bg-ctp-crust shadow-lg z-10">
  <div>
    <a href={baseUrl} class="btn btn-ghost text-xl">{t("header.title")}</a>
  </div>

  <div class="flex-none mx-auto">
    <ul class="menu menu-horizontal px-1 gap-2 hidden md:flex">
      <li>
        <a href=`${baseUrl}#hero` class="btn btn-ghost btn-sm">
          {t("header.hero")}
        </a>
      </li>
      <li>
        <a href=`${baseUrl}#about` class="btn btn-ghost btn-sm">
          {t("header.about")}
        </a>
      </li>
      <li>
        <a href=`${baseUrl}#projects` class="btn btn-ghost btn-sm">
          {t("header.projects")}
        </a>
      </li>
    </ul>
  </div>

  <nav class="flex-none">
    <ul class="menu menu-horizontal px-1">
      <LangPicker lang={lang} />
    </ul>
  </nav>
</header>
