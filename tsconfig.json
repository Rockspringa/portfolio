{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "paths": {
      "@components/*": ["./src/components/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@pages/*": ["./src/pages/*"],
      "@i18n/*": ["./src/i18n/*"],
      "@styles/*": ["./src/styles/*"],
      "@content/*": ["./src/content/*"]
    }
  }
}
