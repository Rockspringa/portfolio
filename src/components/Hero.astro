---
import type { Translator } from "@i18n/utils";

interface Props {
  t: Translator;
}

const { t } = Astro.props;
---

<section
  id="hero"
  class="min-h-screen flex items-center pt-4 md:pt-16"
>
  <div class="container mx-auto px-4 text-center">
    <div class="mb-8 inline-block relative">
      <div
        class="absolute bottom-1/3 inset-0 bg-ctp-mauve opacity-10 rounded-full blur-3xl animate-pulse"
      >
      </div>

      <div class="relative">
        <h1 class="text-5xl md:text-8xl font-bold mb-4 tracking-tight">
          <span class="text-ctp-teal">
            {t("hero.title.first")}
          </span>
          {t("hero.title.last")}
        </h1>
      </div>
    </div>

    <p
      class="text-xl text-secondary-content md:text-2xl max-w-2xl mx-auto mb-8"
    >
      {t("hero.description")}
    </p>

    <div class="flex justify-center gap-4">
      <a href="#projects" class="btn btn-primary md:btn-lg">
        {t("hero.button.projects")}
      </a>
      <a href="#contact" class="btn btn-secondary md:btn-lg">
        {t("hero.button.contact")}
      </a>
    </div>

    <!-- Efecto de consola 8-bit -->
    <div
      class="relative mt-16 max-w-3xl mx-auto bg-base-200 text-sm md:text-base rounded-xl p-2 border-2 border-base-300 md:p-6"
    >
      <div class="absolute right-2 top-2 flex flex-row-reverse gap-2 mb-3">
        <div class="w-3 h-3 rounded-full bg-ctp-red"></div>
        <div class="w-3 h-3 rounded-full bg-ctp-yellow"></div>
        <div class="w-3 h-3 rounded-full bg-ctp-green"></div>
      </div>

      <div class="font-mono text-left text-secondary-content pl-4 pt-4 overflow-x-auto whitespace-nowrap">
        <p>
          <span class="text-neutral/75">44</span>
        </p>

        <p>
          <span class="text-neutral/75 mr-4">45</span>
          <span class="text-ctp-yellow">Developer</span>
          dylan =
          <span class="text-ctp-yellow">BackendDeveloper</span>.<span
            class="text-ctp-blue">builder</span
          ><span class="text-ctp-red">()</span>
        </p>

        <p>
          <span class="text-neutral/75 mr-24">46</span>
          .<span class="text-ctp-blue">name</span><span class="text-ctp-red"
            >(</span
          ><span class="text-ctp-green">"Dylan Antonio Elías Vásquez"</span
          ><span class="text-ctp-red">)</span>
        </p>

        <p>
          <span class="text-neutral/75 mr-24">47</span>
          .<span class="text-ctp-blue">language</span><span class="text-ctp-red"
            >(</span
          ><span class="text-ctp-yellow">Language</span>.<span
            class="text-ctp-teal">JAVA</span
          ><span class="text-ctp-red">)</span>
        </p>

        <p>
          <span class="text-neutral/75 mr-24">48</span>
          .<span class="text-ctp-blue">language</span><span class="text-ctp-red"
            >(</span
          ><span class="text-ctp-yellow">Language</span>.<span
            class="text-ctp-teal">PYTHON</span
          ><span class="text-ctp-red">)</span>
        </p>

        <p>
          <span class="text-neutral/75 mr-24">49</span>
          .<span class="text-ctp-blue">framework</span><span
            class="text-ctp-red">(</span
          ><span class="text-ctp-yellow">Framework</span>.<span
            class="text-ctp-teal">SPRING_BOOT</span
          ><span class="text-ctp-red">)</span>
        </p>

        <p>
          <span class="mr-24">50</span>
          <span class="text-ctp-subtext0">
            /*
            <span class="text-secondary bg-secondary-content">TODO</span>:
            Complete developer */
          </span>
          <span class="animate-pulse">|</span>
        </p>

        <p>
          <span class="text-neutral/75 mr-24">51</span>
          .<span class="text-ctp-blue">builder</span><span class="text-ctp-red"
            >()</span
          >
        </p>

        <p>
          <span class="text-neutral/75">52</span>
        </p>
      </div>
    </div>
  </div>
</section>
