---
import LangPicker from "@components/LangPicker.astro";

interface Props {
  lang: string;
  t: Function;
}

const { lang, t } = Astro.props;
---

<header class="fixed navbar bg-ctp-crust shadow-lg z-10">
  <div class="flex-1">
    <a href="/" class="btn btn-ghost text-xl">{t("header.title")}</a>
  </div>

  <nav class="flex-none">
    <ul class="menu menu-horizontal px-1">
      <LangPicker lang={lang} />
    </ul>
  </nav>
</header>
